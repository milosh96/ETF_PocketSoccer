<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/football_field2"
    tools:context=".SetUpActivity">

    <LinearLayout
        android:id="@+id/layout_p1"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="Player1 Name:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/player1_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="Flag:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/player1_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="AI:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/player1_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_p2"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_p1"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="Player2 Name:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/player2_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorWhite"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="Flag:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/player2_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:text="AI:"
                android:textSize="@dimen/set_up_font_size"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/player2_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:onClick="readyClicked"
        android:id="@+id/begin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_ok2"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:elevation="10dp" />

</android.support.constraint.ConstraintLayout>